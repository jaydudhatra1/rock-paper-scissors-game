  "devDependencies": {
    "@types/node": "^14.14.31",
    "lodash": "^4.17.21",
    "ts-loader": "^8.0.17",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.3",
    "webpack": "^5.24.3",
    "webpack-cli": "^4.5.0",
    "webpack-node-externals": "^2.5.2"
