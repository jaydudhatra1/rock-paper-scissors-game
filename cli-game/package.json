{
  "name": "cli-game",
  "version": "1.0.0",
  "description": "A simple rock paper scissors game.",
  "type": "commonjs",
  "scripts": {
    "tsc": "npm run tsc",
    "dev": "tsc-watch --onSuccess \"npm run bundle\"",
